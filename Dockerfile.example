# Dockerfile para HemoDoctor FastAPI
# Copiar este arquivo para: HEMODOCTOR_CONSOLIDADO_v2.0/03_DESENVOLVIMENTO/CODIGO_FONTE/Dockerfile

FROM python:3.9-slim

LABEL maintainer="HemoDoctor Team <abel.costa@hemodoctor.com>"
LABEL version="2.0.0"
LABEL description="HemoDoctor SaMD - Sistema de Análise Hematológica"

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first (for better caching)
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p logs

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
