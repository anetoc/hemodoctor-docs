{
  "commands": {
    "/risk-analysis": {
      "description": "Análise completa de riscos ISO 14971",
      "usage": "/risk-analysis [escopo] [severidade] [controles]",
      "examples": [
        "/risk-analysis completa classe-III mitigação",
        "/risk-analysis clínica paciente-safety controles-procedurais"
      ],
      "output": "RMF-001 com matriz de riscos e controles"
    },
    "/hazard-identification": {
      "description": "Identificação sistemática de perigos",
      "usage": "/hazard-identification [categoria] [métodos] [fontes]",
      "examples": [
        "/hazard-identification clínico+técnico brainstorming+checklist literatura+experiência",
        "/hazard-identification software HAZOP+PHA código+usuário"
      ],
      "output": "Lista estruturada de perigos com fontes e evidências"
    },
    "/fmea-analysis": {
      "description": "Análise FMEA (Failure Mode and Effects Analysis)",
      "usage": "/fmea-analysis [tipo] [processo] [critérios]",
      "examples": [
        "/fmea-analysis pFMEA análise-CBC RPN>50",
        "/fmea-analysis dFMEA software-design criticidade-alta"
      ],
      "output": "FMEA completa com modos de falha e ações recomendadas"
    },
    "/risk-controls": {
      "description": "Design e especificação de controles de risco",
      "usage": "/risk-controls [hierarquia] [tipo] [eficácia]",
      "examples": [
        "/risk-controls inherent+protective+information todas >90%",
        "/risk-controls procedural+técnico críticos validados"
      ],
      "output": "Especificação de controles com verificação de eficácia"
    },
    "/risk-benefit": {
      "description": "Análise risco-benefício quantitativa",
      "usage": "/risk-benefit [benefícios] [riscos-residuais] [população]",
      "examples": [
        "/risk-benefit diagnóstico-rápido+accuracy residuais-baixos população-geral",
        "/risk-benefit utilidade-clínica riscos-controlados pacientes-críticos"
      ],
      "output": "Relatório risco-benefício com justificativa regulatória"
    },
    "/post-market-risks": {
      "description": "Plano de monitoramento de riscos pós-mercado",
      "usage": "/post-market-risks [indicadores] [thresholds] [ações]",
      "examples": [
        "/post-market-risks performance+safety KPIs-específicos CAPA-automático",
        "/post-market-risks adverse-events trending-mensal investigação-48h"
      ],
      "output": "Plano de vigilância com alertas e protocolos de resposta"
    },
    "/risk-matrix": {
      "description": "Gerar matriz de riscos visual",
      "usage": "/risk-matrix [dimensões] [critérios] [visualização]",
      "examples": [
        "/risk-matrix 5x5 severidade-probabilidade heatmap",
        "/risk-matrix personalizada impacto-detectabilidade dashboard"
      ],
      "output": "Matriz de riscos com categorização e priorização"
    },
    "/residual-risk": {
      "description": "Avaliação de riscos residuais pós-controles",
      "usage": "/residual-risk [controles] [eficácia] [aceitabilidade]",
      "examples": [
        "/residual-risk implementados 90%+ ALARP-justified",
        "/residual-risk verificados eficácia-comprovada critérios-regulatórios"
      ],
      "output": "Análise de riscos residuais com justificativa de aceitabilidade"
    },
    "/clinical-risks": {
      "description": "Análise específica de riscos clínicos",
      "usage": "/clinical-risks [cenários] [população] [outcomes]",
      "examples": [
        "/clinical-risks diagnóstico adulto+pediatrico patient-harm",
        "/clinical-risks uso-clínico real-world adverse-events"
      ],
      "output": "Avaliação de riscos clínicos com impacto no paciente"
    }
  }
}