{
  "commands": {
    "/quality-manual": {
      "description": "Gerar Quality Manual ISO 13485 completo (QMS-001)",
      "usage": "/quality-manual [escopo] [processos] [responsabilidades]",
      "examples": [
        "/quality-manual completo todos organizacional-definido",
        "/quality-manual core principais autoridades-claras"
      ],
      "output": "Quality Manual com política, processos e organograma"
    },
    "/document-control": {
      "description": "Sistema de controle documental (SOP-001)",
      "usage": "/document-control [hierarquia] [aprovação] [distribuição]",
      "examples": [
        "/document-control 4-níveis autoridade-definida controlada",
        "/document-control padrão workflow-aprovação digital"
      ],
      "output": "Procedimento de controle documental com workflows"
    },
    "/capa-system": {
      "description": "Sistema de Ações Corretivas e Preventivas",
      "usage": "/capa-system [processo] [investigação] [eficácia]",
      "examples": [
        "/capa-system completo root-cause-5why verificação-eficácia",
        "/capa-system estruturado fishbone+fault-tree follow-up"
      ],
      "output": "SOP-004 CAPA com metodologias e templates"
    },
    "/internal-audit": {
      "description": "Programa de auditoria interna (SOP-003)",
      "usage": "/internal-audit [cronograma] [escopo] [competências]",
      "examples": [
        "/internal-audit anual todos-processos ISO19011-trained",
        "/internal-audit risk-based críticos auditores-independentes"
      ],
      "output": "Programa de auditoria com cronograma e procedimentos"
    },
    "/supplier-control": {
      "description": "Controle de fornecedores (SOP-005)",
      "usage": "/supplier-control [categorização] [avaliação] [monitoramento]",
      "examples": [
        "/supplier-control crítico+não-crítico auditoria-desktop scorecards",
        "/supplier-control risk-based qualificação-completa KPIs"
      ],
      "output": "Sistema de qualificação e controle de fornecedores"
    },
    "/management-review": {
      "description": "Processo de análise crítica da direção",
      "usage": "/management-review [frequência] [inputs] [outputs]",
      "examples": [
        "/management-review trimestral KPIs+auditorias+feedback ações+recursos",
        "/management-review mensal performance+riscos decisões+melhorias"
      ],
      "output": "SOP-002 com agenda, inputs e processo de decisão"
    },
    "/training-system": {
      "description": "Sistema de treinamento e competência",
      "usage": "/training-system [matriz] [avaliação] [eficácia]",
      "examples": [
        "/training-system role-based competência-avaliada kirkpatrick-levels",
        "/training-system ISO13485+IEC62304 prático+teórico continuous"
      ],
      "output": "Matriz de treinamento com avaliação de eficácia"
    },
    "/design-controls": {
      "description": "Procedimento de controles de design",
      "usage": "/design-controls [fases] [reviews] [verificação]",
      "examples": [
        "/design-controls completas gate-reviews V&V-integrado",
        "/design-controls IEC62304-aligned milestones traceability"
      ],
      "output": "SOP-006 controles de design com gates e critérios"
    },
    "/quality-metrics": {
      "description": "Dashboard de métricas de qualidade",
      "usage": "/quality-metrics [KPIs] [tendências] [ações]",
      "examples": [
        "/quality-metrics processo+produto trending-mensal preventivas",
        "/quality-metrics customer-sat+CAPA performance-targets improvement"
      ],
      "output": "Dashboard com KPIs, tendências e planos de ação"
    },
    "/change-control": {
      "description": "Controle de mudanças (SOP-008)",
      "usage": "/change-control [categorização] [aprovação] [implementação]",
      "examples": [
        "/change-control risk-based CCB-approval validação-implementação",
        "/change-control major+minor autoridade-definida impact-analysis"
      ],
      "output": "Procedimento de controle de mudanças com governança"
    }
  }
}